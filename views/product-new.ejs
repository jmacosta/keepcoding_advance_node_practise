<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <title>Productos <%= title%></title>
  </head>
  <body>
    <header class="text-gray-600 body-font"><%- include('header.ejs')%></header>
    <main>
      <%- include('nav.ejs')%>
      <section>
        <form class="w-full max-w-lg md:ml-auto md:mr-auto py-10" method="POST">
          <div class="flex flex-wrap -mx-3 mb-6 l">
            <div class="w-full px-3 mb-6 md:mb-0">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-first-name"
                ><%=__('What do you sell or are you looking for?')%>
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                id="name"
                name="name"
                type="text"
                required
                placeholder="<%=__('three-seater red velvet sofa')%>"
              />
            </div>

            <div class="w-full px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-last-name"
              >
                <%=__('Description')%>
              </label>
              <textarea
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="description"
                name="description"
                rows="4"
                placeholder="<%=__('Add relevant information such as condition, model, color...')%>"
              ></textarea>
            </div>
          </div>

          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
              <label
                class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                for="grid-password"
              >
                <%=__('price')%>
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="price"
                name="price"
                type="number"
                required
                placeholder="<%=__('Be reasonable...')%>"
                min="0"
              />
            </div>
          </div>

          <div class="flex flex-wrap mb-6">
            <label
              class="mb-2 block text-xs font-bold uppercase tracking-wide text-gray-700"
            >
              <%=__('Sell or Search')%>
            </label>

            <div
              class="flex w-full justify-around appearance-none bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            >
              <div class="w-1/3 p-4">
                <input
                  class=""
                  id="sell"
                  name="sellOrSearch"
                  type="radio"
                  value="true"
                  required
                />
                <label for="sell"><%=__('sell')%> </label>
              </div>
              <div class="w-1/3 p-4">
                <input
                  class=""
                  id="search"
                  name="sellOrSearch"
                  type="radio"
                  value="false"
                />
                <label for="search"><%=__('search')%></label>
              </div>
            </div>
          </div>

          <div class="w-full mb-6">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
              for="tags"
            >
              <%=__('tags')%>
            </label>
            <div
              class="flex w-full justify-around appearance-none bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            >
              <div class="relative w-1/4">
                <input
                  type="checkbox"
                  value="lifestyle"
                  id="lifestyle"
                  name="tags"
                />
                <label for="lifestyle">Lifestyle</label>
              </div>
              <div class="relative w-1/4">
                <input type="checkbox" value="mobile" id="mobile" name="tags" />
                <label for="mobile">Mobile</label>
              </div>
              <div class="relative w-1/4">
                <input type="checkbox" value="motor" id="motor" name="tags" />
                <label for="motor">Motor</label>
              </div>
              <div class="relative w-1/4">
                <input type="checkbox" value="work" id="work" name="tags" />
                <label for="work">Work</label>
              </div>
            </div>
          </div>
          <div class="w-full mb-6">
            <label
              class="mb-2 block text-xs font-bold uppercase tracking-wide text-gray-700"
              for="image"
              ><%=__('Upload a image')%></label
            >
            <div
              class="flex w-full appearance-none bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            >
              <div class="relative">
                <input type="file" id="image" name="image" />
              </div>
            </div>
          </div>
          <div class="w-full mb-6">
            <div
              class="flex w-full appearance-none bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            >
              <button
                type="submit"
                class="w-full text-white bg-blue-500 border-0 py-2 px-8 focus:outline-none hover:bg-blue-600 rounded text-lg"
              >
                <%=__('Submit')%>
              </button>
            </div>
          </div>
        </form>
      </section>
    </main>
    <%- include('footer.ejs')%>
  </body>
</html>
