<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Productos <%= title%></title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css" /> -->
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body>
    <header class="text-gray-600 body-font"><%- include('header.ejs')%></header>
    
    <main>
    <%- include('nav.ejs')%>
      <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
          <div class="flex flex-wrap -m-4">
            <%products.forEach(function(product){%>

            <div class="p-4 md:w-1/3">
              <div
                class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden"
              >
                <img
                  class="lg:h-48 md:h-36 w-full object-contain object-center"
                  src="/assets/<%= product.image %>"
                  alt="<%= product.image %>"
                  onerror="this.src='assets/no-image.jpg'"
                />
                <div class="p-6">
                  <h2
                    class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"
                  >
                     <%=__('Price ') %><%= product.price %> â‚¬
                  </h2>
                  <h1
                    class="title-font text-lg font-medium text-gray-900 mb-3 truncate"
                  >
                    <%= product.name %>
                  </h1>
                  <p class="leading-relaxed mb-3">
                    <%= product.description %>
                  </p>
                  <div class="flex items-start flex-nowrap flex-col">
                    <a
                      class="text-blue-500 inline-flex items-center md:mb-2 lg:mb-0"
                      ><% if (product.sellOrSearch){ %>
                      <h3 class="sell"><%=__('FOR SALE ') %></h3>
                      <% }else{%>
                      <h3 class="search"><%=__('SEARCH ') %></h3>
                      <% } %>
                      <svg
                        class="w-4 h-4 ml-2"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M5 12h14"></path>
                        <path d="M12 5l7 7-7 7"></path>
                      </svg>
                    </a>
                    <div class="flex flex-row justify-end">
                      <%product.tags.forEach(function(tag){%>
                      <div
                        class="text-black mr-3 flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 pl-3 py-1 border-r-2 border-l-2 border-gray-200 bg-teal-300"
                      >
                        <%= tag %>
                      </div>

                      <%})%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%})%>
          </div>
        </div>
      </section>
    </main>
    <%- include('footer.ejs')%>
  </body>

</html>
