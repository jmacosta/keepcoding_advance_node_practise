<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Productos <%= title%></title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css" /> -->
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body>
    <header class="text-gray-600 body-font"><%- include('header.ejs')%></header>
    
    <main>
    <%- include('nav.ejs')%>
 
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900"><%=__('List view')%></h1>
      
    </div>
    <div class="flex flex-wrap -m-2">
      <%products.forEach(function(product){%>
      <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
        <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
          <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" 
          src="/thumbs/<%= `thumbnail-${product.image}` %>"
                  alt="<%= product.image %>"
                  onerror="this.src='assets/no-image.jpg'"/>
          <div class="flex-grow">
            <h2 class="text-gray-900 title-font font-medium"><%= product.name %></h2>
            <% if (product.sellOrSearch){ %>
                      <p class="sell text-gray-500"><%=__('FOR SALE ') %><%= product.price %> €</p>
                      <% }else{%>
                      <p class="search text-gray-500"><%=__('SEARCH ') %><%= product.price %> €</p>
                      <% } %>
            
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</section>


    </main>
    <%- include('footer.ejs')%>
  </body>

</html>
